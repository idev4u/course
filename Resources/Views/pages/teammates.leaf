<!DOCTYPE html>
<html>
<style>
html, body {
height: 100%;
margin: 0;
}
</style>
    <head>
        #embed("common/header/stylesheet-bootstrap")
        <title>Team Members</title>
    </head>
    <body>
        <p> this is the teammates add section</p>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">SureName</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
            #for(mate in teammatelist) {
              <tr>
                <th scope="row">#(mate.id)</th>
                <td>#(mate.name)</td>
                <td>#(mate.surename)</td>
                <td>
                    <form method="POST" action="/teammates/mate/#(mate.id)/delete">
                        <div class="form-group input-group">
                            <span class="input-group-btn">
                                <input class="btn btn-danger" type="submit" value="delete" />
                            </span>
                        </div>
                    </form>
                </td>
              </tr>
            }
            </tbody>
        </table>
        #embed("common/scripts/layout-scripts")
    </body>
</html>
